datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id      Int     @id @default(autoincrement())
  name    String
  price   Int
  sold    Int     @default(0)

  // ğŸ”¹ 1å¯¾å¤šã®é–¢ä¿‚ï¼ˆProduct 1 : å¤š Transactionï¼‰
